# Database Configuration
# PostgreSQL connection string (required)
# Example for Supabase: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
# Example for local: postgresql://user:password@localhost:5432/digital_menu?schema=public
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# Environment
# Options: development, test, production
# Default: development
NODE_ENV="development"

# Email Service Configuration (Optional)
# These are optional - if not provided, verification codes will be logged to console in development
# Get your API key from https://resend.com/api-keys

# Resend API Key for sending verification emails
RESEND_API_KEY=""

# Email address to send verification codes from
# Format: "Display Name <email@domain.com>" or just "email@domain.com"
# Default: "Digital Menu <onboarding@resend.dev>" (Resend's default)
RESEND_FROM_EMAIL=""

# Account email for Resend (optional)
RESEND_ACCOUNT_EMAIL=""

# Email Verification
# Set to "true" to enable email sending via Resend..
# Set to "false" to log verification codes to console (development mode)
# Default: false
# Note: In development, codes are always logged to console for testing
SEND_VERIFICATION_CODE="false"
